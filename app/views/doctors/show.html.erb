<h1><%= @doctor.name %></h1>

<h3>Appointments:</h3>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li>
      <p><%= link_to appointment.formatted_appointment_datetime, appointment_path(appointment) %></p>
      <p><%= link_to appointment.patient.name, patient_path(appointment.patient) %></p>
    </li>
  <% end %>
</ul>