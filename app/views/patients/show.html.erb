<h1><%= @patient.name %></h1>

<h3>Appointments:</h3>
<ul>
  <% @patient.appointments.each do |appointment| %>
    <li>
      <p><%= link_to appointment.formatted_appointment_datetime, appointment_path(appointment) %></p>
      <p><%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %></p>
    </li>
  <% end %>
</ul>